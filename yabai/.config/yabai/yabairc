yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config layout bsp
yabai -m config top_padding    30
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     4
# set focus follows mouse mode (default: off, options: off, autoraise, autofocus)
yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus on
# on or off (default: off)
yabai -m config auto_balance off

# floating windows are always on top
yabai -m config window_topmost off




# bind application to space
yabai -m rule --add app="Discord" space=7
yabai -m rule --add app="Slack" space=7
yabai -m rule --add app="Morgen" space=8
yabai -m rule --add app="Obsidian" space=3

yabai -m rule --add title="^Preferences" manage=off layer=above
yabai -m rule --add title="^(Opening)" manage=off layer=above
yabai -m rule --add title='Library' manage=off layer=above
yabai -m rule --add app='App Store' manage=off layer=above
yabai -m rule --add app="System Settings" manage=off layer=above
yabai -m rule --add app="zoom.us" manage=off layer=above


yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus recent || yabai -m window --focus first"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus recent || yabai -m window --focus first"

#yabai -m signal --add event=application_front_switched action="~/.config/yabai/focus_border.sh"
